doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/topic') Server Side JavaScript
    ul
      each temp in topics
        li
          a(href='/topic/'+temp.id)= temp.title
    article
      if !isEmpty
        h2= topic.title
        div= topic.description
        div= topic.author
      else
        h2 Welcome
        p This is server side javascript tutorial.
    ul
      li
        a(href='/topic/add') add
      if topic
        li
          a(href='/topic/' + topic.id + '/edit') edit
