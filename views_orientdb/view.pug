doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/topic') server Side JavaScript
    ul
      each topic in topics
        li
          - rid = encodeURIComponent(topic['@rid'])
          a(href='/topic/'+rid)= topic.title
    article
      if topic
        h2= topic.title
        p= topic.description
      else
        h2 Welcome
        p This is server side javascript tutorial.
    div
      a(href='topic/new') new
